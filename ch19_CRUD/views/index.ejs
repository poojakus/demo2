<%- include('./includes/header.ejs') %>

<div class="container">
  <div class="row">
    <div class="col-lg-6 mt-5">
      <h2 class="alert alert-success text-center">Add new Student</h2>
      <form method="post">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" name="name" />
        </div>
        <div class="mb-3">
          <label for="age" class="form-label">Age</label>
          <input type="text" class="form-control" id="age" name="age" />
        </div>
        <div class="mb-3">
          <label for="fees" class="form-label">Fees</label>
          <input type="text" class="form-control" id="fees" name="fees" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    <div class="col-lg-6">
      <h2 class="alert alert-danger text-center mt-5">List Of Students</h2>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">No.</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Fees</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% var i=1  %>
        <% data12.forEach(item=> { %>
          <tr>
            <td><%= i++ %></td>
            <td><%= item.name %></td>
            <td><%= item.age %></td>
            <td><%= item.fees %></td>
            <td>
              <form action="edit/<%= item._id %>" method="get" >
                <button type="submit" style="border: none;"><img src="images/pen.png" height="30px" width="30px" ></button>
              </form>
            <form action="delete/<%= item._id %>" method="post" >
              <button type="submit" style="border: none;"> <button type="submit" style="border: none;"><img src="images/trash.png" height="30px" width="30px" ></button></button>
            </form>
          </td>

          </tr>

        <% }) %>
          
        </tbody>
      </table>
    </div>
  </div>
</div>
<%- include('./includes/footer.ejs') %>
